<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editProfilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_baru"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT PROFIL"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Edit Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg_white"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- Profile Image Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivEditProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_baru"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnChangeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ganti Foto"
                    android:textSize="12sp"
                    android:background="@drawable/button_secondary_bg"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEditName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan nama lengkap"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- NIM Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEditNim"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan NIM"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEditEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Income Target Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Pemasukan Bulanan"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etIncomeTarget"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan target pemasukan"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Expense Limit Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batas Pengeluaran Bulanan"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etExpenseLimit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan batas pengeluaran"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnCancelEdit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Batal"
                    android:textColor="#666666"
                    android:background="@drawable/rounded_bg"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnSaveProfile"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Simpan"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_primary_bg"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 MONEY MATE"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
